{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/cover.css') }}">
    <div class="d-flex vh-100 text-center text-white bg-dark">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <header class="mb-auto">
                <div>
                    {% if app.user %}
                        <a style="font-size: 1.17em" href="{{ url('app_user') }}" class="float-md-start mb-0 pt-2 text-decoration-none text-white fw-bold">{{ app.user.getFirstName() }} {{ app.user.getLastName() }}</a>
                    {% endif %}

                    <nav class="nav nav-masthead justify-content-center float-md-end">
                        <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="{{ url('app_home') }}">Home</a>
                        <a class="nav-link fw-bold py-1 px-0" href="#">Informacje</a>
                        <a class="nav-link fw-bold py-1 px-0" href="#">Kontakt</a>
                        <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_logout') }}">Wyloguj się</a>
                    </nav>
                </div>
            </header>

            <main class="px-3">
                <table class="table table-striped text-white">
                    <thead>
                        <tr>
                            <td>
                                Informacje o koncie
                            </td>
                        </tr>
                    </thead>
                    <tbody class="table-striped">
                        <tr>
                            <td class="d-flex text-white align-items-start">
                                Email: {{ user.email }}
                            </td>
                        </tr>
                        <form action="{{ url('app_use_update') }}">
                            <tr>
                                <td class="d-flex text-white align-items-start">
                                    <label class="pe-2" for="nm">Imię:</label>
                                    <input class="text-white" style="background: none; border: none" id="nm" value="{{ user.getFirstName() }}" type="text" name="first_name">
                                </td>
                            </tr>
                            <tr>
                                <td class="d-flex text-white align-items-start">
                                    <label class="pe-2" for="nlm">Nazwisko:</label>
                                    <input class="text-white" style="background: none; border: none" id="nlm" value="{{ user.getLastName() }}" type="text" name="last_name">
                                </td>
                            </tr>



                    </tbody>
                </table>
                <button class="d-flex btn btn-light" type="submit">Zapisz</button>
                </form>
            </main>

            <footer class="mt-auto text-white-50">
                <p></p>
            </footer>
        </div>
    </div>
{% endblock %}
