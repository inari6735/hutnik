{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
<form method="post">
    <!-- Pills content -->
    <div class="container-fluid align-content-center justify-content-center">
        <div class="row d-flex justify-content-center align-content-center">
            <div class="col-6">
    <div class="tab-content align-content-center">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">

                <div class="container-fluid mt-0 mb-5 justify-content-center align-items-center">
                    <div class="row-cols-auto mt-5 justify-content-center align-items-center text-center">
                        <div class="col-auto align-content-center align-items-center">
                            <img src="{{ asset('images/login_logo.png') }}" class=" mb-4 img-fluid h-75 w-75 align-items-center"
                                 alt="Sample image">
                        </div>

                    </div>

                </div>

                <!-- Email input -->
                {% if error %}
                    <div class="alert alert-danger">Niepoprawne dane</div>
                {% endif %}
                <div class="mb-4 text-light">
                    <label for="inputEmail" class="pb-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <!-- Password input -->
                <div class="mb-4 text-light">
                    <label for="inputPassword" class="pb-2">Hasło</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

{#                <!-- 2 column grid layout -->#}
