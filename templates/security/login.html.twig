{#                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" name="_remember_me" checked />#}
{#                            <label class="form-check-label" for="loginCheck"> Zapamiętaj mnie </label>#}
{#                        </div>#}
{#                    </div>#}

{#                </div>#}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

                <!-- Submit button -->
            <div class="row">
                <div class="col-auto w-100 pt-3">
                    <button type="submit" style="" class="btn btn-light btn-block mb-4 w-100">Zaloguj się</button>
                </div>
            </div>

                <!-- Register buttons -->
            <div class="text-center text-white">
                <p>Nie masz konta? <a href="{{ url('app_register') }}" style="text-decoration: none; color: #0084ff">Rejestracja</a></p>
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
    <!-- Pills content -->
</form>
{% endblock %}
